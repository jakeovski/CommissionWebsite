<!DOCTYPE html>
<html lang="en">

<head>
    <%-include('../partials/head') %>
</head>

<body>
    <!--Navigation Menu on top-->
    <header>
        <%-include('../partials/header') %>
    </header>
    <!--Core-->
    <!--Gradient Back-->
    <div id="gradient" style="height:90% !important;"">

        <!--Registration Form-->
    <div class=" container" id="loginContainer">
        <div class="d-flex justify-content-center h-100">
            <div class="card" id="card">
                <div class="card-header" id="card-header">
                    <h4 class="card-title mt-3 text-center" style="color: #ededed;">Create Account</h4>
                    <p class="text-center" style="color: #ededed">Get started with your free account</p>
                </div>
                <div class="card-body">
                    <form action="/register" method="POST">
                        <div class="form-group input-group">
                            <div class="input-group-prepend">
                                <span class="input-group-text justify-content-center align-items-center"> <i
                                        class="fa fa-user"></i>
                                </span>
                            </div>
                            <input name="fullname" class="form-control" placeholder="Full name" type="text">
                        </div> <!-- form-group// -->
                        <div class="form-group input-group">
                            <div class="input-group-prepend">
                                <span class="input-group-text justify-content-center align-items-center"> <i
                                        class="fa fa-user"></i>
                                </span>
                            </div>
                            <input name="username" class="form-control" placeholder="Username" type="text">
                        </div> <!-- form-group// -->
                        <div class="form-group input-group">
                            <div class="input-group-prepend">
                                <span class="input-group-text justify-content-center align-items-center"> <i
                                        class="fa fa-envelope"></i>
                                </span>
                            </div>
                            <input name="email" class="form-control" placeholder="Email address" type="email">
                        </div> <!-- form-group// -->
                        <div class="form-group input-group">
                            <div class="input-group-prepend">
                                <span class="input-group-text justify-content-center align-items-center"> <i
                                        class="fa fa-lock"></i>
                                </span>
                            </div>
                            <input name="password" class="form-control" placeholder="Create password" type="password">
                        </div> <!-- form-group// -->
                        <div class="form-group input-group">
                            <div class="input-group-prepend">
                                <span class="input-group-text justify-content-center align-items-center"> <i
                                        class="fa fa-lock"></i>
                                </span>
                            </div>
                            <input name="password2" class="form-control" placeholder="Repeat password" type="password">
                        </div> <!-- form-group// -->
                        <div class="form-group">
                            <input type="submit" value="Create an Account" class="btn float-right login_btn" id="loginButton"
                                style="background-color: #f4d74b;">
                        </div>
                        <div class="card-footer">
                            <div class="d-flex justify-content-center links">
                                Have an account<a href="/login" style="color: #f4d74b;">Log Ing</a>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
    </div>
    <!--Registration End-->

</body>

</html>