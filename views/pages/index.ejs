<!DOCTYPE html>
<html lang="en">
<!--Head-->

<head>
    <!--Import Head-->
    <%- include('../partials/head') %>
</head>
<!--Body-->

<body>
    <!--Navigation Menu on top-->
    <header>
        <!--Import Header-->
        <%- include('../partials/header') %>
    </header>

    <!--Image Carousel Start-->
    <div id="carousel" class="carousel slide carousel-fade" data-ride="carousel" data-interval="6000"
        style="margin-bottom: 70px;">
        <ol class="carousel-indicators">
            <li data-target="#carousel" data-slide-to="0" class="active"></li>
            <li data-target="#carousel" data-slide-to="1"></li>
            <li data-target="#carousel" data-slide-to="2"></li>
        </ol>
        <div class="carousel-inner" role="listbox">
            <div class="carousel-item active">
                <a href="#">

                    <picture>
                        <source srcset="Images/bannerAndLogo/1.png" media="(min-width: 1400px)">
                        <source srcset="Images/bannerAndLogo/1.1.png" media="(min-width: 769px)">
                        <source srcset="Images/bannerAndLogo/1.2.png" media="(min-width: 577px)">
                        <img srcset="Images/bannerAndLogo/1.3.png" alt="responsive image" class="d-block img-fluid">
                    </picture>

                    <div class="carousel-caption">
                        <div>
                            <h2>Look for artist</h2>
                            <p>Easily find the one who will do your work</p>
                        </div>
                    </div>
                </a>
            </div>
            <!-- /.carousel-item -->
            <div class="carousel-item">
                <a href="#">
                    <picture>
                        <source srcset="Images/bannerAndLogo/2.png" media="(min-width: 1400px)">
                        <source srcset="Images/bannerAndLogo/2.1.png" media="(min-width: 769px)">
                        <source srcset="Images/bannerAndLogo/2.2.png" media="(min-width: 577px)">
                        <img srcset="Images/bannerAndLogo/2.3.png" alt="responsive image" class="d-block img-fluid">
                    </picture>

                    <div class="carousel-caption justify-content-center align-items-center">
                        <div>
                            <h2>See examples of their work</h2>
                            <p>Find the style you need</p>
                        </div>
                    </div>
                </a>
            </div>
            <!-- /.carousel-item -->
            <div class="carousel-item">
                <a href="#">
                    <picture>
                        <source srcset="Images/bannerAndLogo/3.png" media="(min-width: 1400px)">
                        <source srcset="Images/bannerAndLogo/3.1.png" media="(min-width: 769px)">
                        <source srcset="Images/bannerAndLogo/3.2.png" media="(min-width: 577px)">
                        <img srcset="Images/bannerAndLogo/3.3.png" alt="responsive image" class="d-block img-fluid">
                    </picture>

                    <div class="carousel-caption justify-content-center align-items-center">
                        <div>
                            <h2>Favorite</h2>
                            <p>Add them to your Favorites</p>
                        </div>
                    </div>
                </a>
            </div>
            <!-- /.carousel-item -->
        </div>
        <!-- /.carousel-inner -->
        <a class="carousel-control-prev" href="#carousel" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#carousel" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>
    <!-- /.carousel -->

    <!---Buttons-->
    <div class="container">
        <div class="container h-100">
            <div class="row" style="margin-top: 20px">
                <div class="col-md-12">
                    <p style="text-align: -webkit-center;">
                        <button onclick="window.location.href = '/login';" id="signInButton" type="button"
                            class="btn btn-round-lg btn-lg">Sign In</button>
                        <button onclick="window.location.href = '/register';" id="signInButton" type="button"
                            class="btn btn-round-lg btn-lg">Register</button>
                    </p>
                </div>
            </div>
        </div>
    </div>

    <!--Footer-->
    <footer class="footer" style="position:fixed;">
        <!--Import Footer Template-->
        <%- include('../partials/footer') %>
    </footer>
    <!--Footer End-->
</body>

</html>

<!-----------------------------------------------------Index Page End-->