<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('../partials/head') %>
</head>

<body>

    <!--Navigation Menu on top-->
    <header>
        <%- include('../partials/header') %>
    </header>

    <!--Core-->
    <div id="gradient" style="height:90% !important;">
        <!--Login Form-->
        <div class="container" id="loginContainer">
            <div class="d-flex justify-content-center h-100">
                <div class="card" id="card">
                    <div class="card-header" id="card-header">
                        <h3>Sign In</h3>
                        <div class="d-flex justify-content-end social_icon">
                            <span><i class="fab fa-facebook-square"></i></span>
                            <span><i class="fab fa-deviantart"></i></span>
                            <span><i class="fab fa-twitter-square"></i></span>
                        </div>
                    </div>
                    <div class="card-body">
                        <form action = "/dologin" method = "POST">
                            <div class="input-group form-group">
                                <div class="input-group-prepend">
                                    <span class="input-group-text"><i class="fas fa-user"></i></span>
                                </div>
                                <input type="text" class="form-control" placeholder="username" id = "usernameInput" name = "username">

                            </div>
                            <div class="input-group form-group">
                                <div class="input-group-prepend">
                                    <span class="input-group-text"><i class="fas fa-key"></i></span>
                                </div>
                                <input type="password" class="form-control" placeholder="password" id = "passwordInput" name = "password">
                            </div>
                            <div class="row align-items-center remember" style="margin-top: 0px; margin-bottom: 0px;">
                                <input type="checkbox">Remember Me
                            </div>
                            <div class="form-group">
                                <input type="submit" value="Login" class="btn float-right login_btn" id="loginButton" style = "background-color: #f4d74b;">
                            </div>
                        </form>
                    </div>
                    <div class="card-footer">
                        <div class="d-flex justify-content-center links">
                            Don't have an account?<a href="reg.html" style="color: #f4d74b;">Sign Up</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!--./Login Form-->

        <!--Footer Start-->
        <footer class="footer">
            <%- include('../partials/footer') %>
        </footer>
    </div>

    <!--Footer End-->
</body>

</html>
